<% content_for :css do %>
  <%= stylesheet_link_tag 'admin' %>
<% end %>

<div class="container">
  <div class="d-flex align-items-center">
    <h1>商品一覧</h1>
    <div class="ml-auto productList__linkBox">
      <a href="/admin/new" class="btn btn-outline-dark">新規作成</a>
    </div>
  </div>
  <table class="table table-hover productList__table">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>商品名</th>
        <th>画像</th>
        <th>料金</th>
        <th>作成日時</th>
        <th>更新日時</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <th><%= product.id %></th>
          <th><%= product.name %></th>
          <th class="productList__img">
            <% if product.image? %>
              <%= image_tag product.image.url %>
            <% else %>
              <%= image_tag "noimage.png" %>
            <% end %>
          </th>
          <th><%= product.price %>円</th>
          <th><%= product.created_at.to_s(:datetime_jp) %></th>
          <th><%= product.updated_at.to_s(:datetime_jp) %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div><!-- container -->
