<% content_for :css do %>
  <%= stylesheet_link_tag 'admin' %>
<% end %>

<div class="container">
  <div class="d-flex align-items-center">
    <h1>商品一覧</h1>
    <div class="ml-auto productList__linkBox">
      <%= link_to '新規作成', new_admin_path, class: 'btn btn-outline-dark' %>
    </div>
  </div>
  <table class="table table-hover productList__table">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>商品名</th>
        <th>画像</th>
        <th>料金</th>
        <th>作成日時</th>
        <th>更新日時</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td class="productList__img">
            <% if product.image? %>
              <%= image_tag product.image.url %>
            <% else %>
              <%= image_tag "noimage.png" %>
            <% end %>
          </td>
          <td><%= product.price %>円</td>
          <td><%= product.created_at.to_s(:datetime_jp) %></td>
          <td><%= product.updated_at.to_s(:datetime_jp) %></td>
          <td><%= link_to '詳細', admin_path(product.id), class: 'btn btn-outline-dark' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div><!-- container -->
